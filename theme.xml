      </text>
      <text name="md_publisher" >
         <pos>0 0</pos>
         <origin>1 1</origin>
         <color>00000000</color>
      </text>
      <text name="md_genre" >
         <pos>0 0</pos>
         <origin>1 1</origin>
         <color>00000000</color>
      </text>
      <text name="md_players" >
         <pos>0 0</pos>
         <origin>1 1</origin>
         <color>00000000</color>
      </text>
      <datetime name="md_lastplayed" >
         <pos>0 0</pos>
         <origin>1 1</origin>
         <color>00000000</color>
      </datetime>
      <datetime name="md_releasedate" >
         <pos>0 0</pos>
         <origin>1 1</origin>
         <color>00000000</color>
      </datetime>
      <text name="md_playcount" >
         <pos>0 0</pos>
         <origin>1 1</origin>
         <color>00000000</color>
      </text>
      <text name="md_description" >
         <pos>0 0</pos>
         <origin>1 1</origin>
         <color>00000000</color>
      </text>
      <text name="md_name" >
         <pos>0 0</pos>
         <origin>1 1</origin>
         <color>00000000</color>
      </text>
      <helpsystem name="help">
         <pos>0.03 0.956</pos>
         <fontPath>./_inc/fonts/EXEPixelPerfect.ttf</fontPath>
         <fontSize>0.05</fontSize>
         <textColor>a6adc8</textColor>
         <iconColor>a6adc8</iconColor>
         <size>1 1</size>

      </helpsystem>

   </view>

