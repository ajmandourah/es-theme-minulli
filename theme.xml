      <text name="md_lbl_publisher" >
         <color>00000000</color>
      </text>
      <text name="md_lbl_genre" >
         <color>00000000</color>
      </text>
      <text name="md_lbl_players" >
         <pos>0 0</pos>
         <origin>1 1</origin>
         <color>00000000</color>
      </text>
      <text name="md_lbl_lastplayed" >
         <pos>0 0</pos>
         <origin>1 1</origin>
         <color>00000000</color>
      </text>
      <text name="md_lbl_playcount" >
         <pos>0 0</pos>
         <origin>1 1</origin>
         <color>00000000</color>
      </text>
      <text name="md_lbl_gametime" >
         <pos>0 0</pos>
         <origin>1 1</origin>
         <color>00000000</color>
      </text>
      <text name="md_developer" >
         <pos>0 0</pos>
