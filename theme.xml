   <formatVersion>7</formatVersion>
   <!--
   ///
   All Views
   ///
   -->
   <view name="system">

      <textlist name="textlist">
         <!-- <selectorHorizontalOffset>0.3</selectorHorizontalOffset> -->
         <fontPath>./_inc/fonts/EXEPixelPerfect.ttf</fontPath>
         <fontSize>0.05</fontSize>
         <alignment>left</alignment>
         <lineSpacing>1</lineSpacing>
         <selectorHeight>0.07</selectorHeight>
         <selectorColor>fdfcff</selectorColor>
         <selectedColor>090017</selectedColor>
         <primaryColor>fdfcff</primaryColor>
         <secondaryColor>fdfcff</secondaryColor>
         <zIndex>1</zIndex>
         <pos>0 0.07</pos>
         <origin>0 0</origin>
         <horizontalMargin>0.05</horizontalMargin>
         <!-- <selectorColorEnd>000000</selectorColorEnd>
         <selectorGradientType>horizontal</selectorGradientType> -->
         <forceUppercase>true</forceUppercase>
         <size>1 0.81</size>
      </textlist>
      <text name="systemInfo">
         <systemInfoDelay>300</systemInfoDelay>
         <pos>0.8 0.8</pos>
         <size>0 0</size>
         <color>fdfcff</color>
         <fontPath>./_inc/fonts/EXEPixelPerfect.ttf</fontPath>
         <fontSize>0.041666666666667</fontSize>

      </text>
      <helpsystem name="help">
         <fontPath>./_inc/fonts/EXEPixelPerfect.ttf</fontPath>
         <fontSize>0.041666666666667</fontSize>
         <textColor>fdfcff</textColor>
         <iconColor>fdfcff</iconColor>

      </helpsystem>
   </view>

